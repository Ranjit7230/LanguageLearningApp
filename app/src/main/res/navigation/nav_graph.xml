<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.miwok.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <action
            android:id="@+id/action_mainActivity_to_numbersActivity"
            app:destination="@id/numbersActivity"
            app:enterAnim="@anim/fragment_fade_enter" />
        <action
            android:id="@+id/action_mainActivity_to_colorsActivity"
            app:destination="@id/colorsActivity"
            app:enterAnim="@anim/fragment_fade_enter" />
        <action
            android:id="@+id/action_mainActivity_to_familyActivity"
            app:destination="@id/familyActivity"
            app:enterAnim="@anim/fragment_fade_enter" />
        <action
            android:id="@+id/action_mainActivity_to_phrasesActivity"
            app:destination="@id/phrasesActivity"
            app:enterAnim="@anim/fragment_fade_enter" />
    </activity>
    <activity
        android:id="@+id/numbersActivity"
        android:name="com.example.miwok.NumbersActivity"
        android:label="NumbersActivity" />
    <activity
        android:id="@+id/colorsActivity"
        android:name="com.example.miwok.ColorsActivity"
        android:label="ColorsActivity" />
    <activity
        android:id="@+id/familyActivity"
        android:name="com.example.miwok.FamilyActivity"
        android:label="FamilyActivity" />
    <activity
        android:id="@+id/phrasesActivity"
        android:name="com.example.miwok.PhrasesActivity"
        android:label="PhrasesActivity" />
</navigation>